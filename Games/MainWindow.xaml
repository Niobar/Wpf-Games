<Window x:Class="Games.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Games"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="280" KeyUp="Window_KeyUp" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,0">
        <Button Name="Tetris" Content="Tetris" HorizontalAlignment="Center" Height="50" Margin="0,20,0,0" VerticalAlignment="Top" Width="200" Click="Tetris_Click"/>
        <Button Name="Snake" Content="Snake" HorizontalAlignment="Center" Height="50" Margin="0,90,0,0" VerticalAlignment="Top" Width="200" Click="Snake_Click"/>
        <Button Name="Highscore" Content="Highscore" HorizontalAlignment="Center" Height="50" Margin="0,160,0,0" VerticalAlignment="Top" Width="200" Click="Highscore_Click" />
        
    </Grid>
</Window>
